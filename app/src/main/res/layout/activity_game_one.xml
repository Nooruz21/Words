            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/letter_style"
            android:gravity="center"
            android:layout_marginHorizontal="8dp"/>
        <TextView
            android:id="@+id/letter10"
            android:layout_width="44dp"
