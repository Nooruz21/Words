<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameOneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/image_one"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/teal_700"/>
        <ImageView
            android:id="@+id/image_two"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/teal_700"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/image_three"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/teal_700"/>
        <ImageView
            android:id="@+id/image_four"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/radius"
            android:backgroundTint="@color/teal_700"/>


    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:gravity="center"
       android:orientation="horizontal">
       <EditText
           android:id="@+id/ed_letter"
           android:layout_width="320dp"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:paddingVertical="16dp"
           android:background="@drawable/edit_style"
           android:textSize="24sp"
           android:textColor="@color/black"/>

       <ImageView
           android:id="@+id/btn_clear"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@drawable/ic_baseline_clear_24"
           android:visibility="gone"
          android:layout_marginStart="14dp"/>

   </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:gravity="center"
    android:orientation="horizontal">
<TextView
    android:id="@+id/letter1"
    android:layout_width="44dp"
    android:layout_height="44dp"
    android:text="П"
    android:textColor="@color/white"
    android:textSize="24sp"
    android:textStyle="bold"
    android:background="@drawable/letter_style"
    android:gravity="center"
    android:layout_marginHorizontal="8dp"/>
    <TextView
        android:id="@+id/letter2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:text="Г"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/letter_style"
        android:gravity="center"
        android:layout_marginHorizontal="8dp"/>
    <TextView
        android:id="@+id/letter3"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:text="Р"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/letter_style"
        android:gravity="center"
        android:layout_marginHorizontal="8dp"/>
    <TextView
        android:id="@+id/letter4"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:text="М"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/letter_style"
        android:gravity="center"
        android:layout_marginHorizontal="8dp"/>
    <TextView
    android:id="@+id/letter5"
    android:layout_width="44dp"
    android:layout_height="44dp"
    android:text="М"
    android:textColor="@color/white"
    android:textSize="24sp"
    android:textStyle="bold"
    android:background="@drawable/letter_style"
    android:gravity="center"
    android:layout_marginHorizontal="8dp"/>
    <TextView
    android:id="@+id/letter6"
    android:layout_width="44dp"
    android:layout_height="44dp"
    android:text="С"
    android:textColor="@color/white"
    android:textSize="24sp"
    android:textStyle="bold"
    android:background="@drawable/letter_style"
    android:gravity="center"
    android:layout_marginHorizontal="8dp"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
